<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
          <%= form_with(model: event, local: true) do |form| %>
            <% if event.errors.any? %>
              <div id="error_explanation" class="alert alert-warning mx-5 mt-2 px-5 text-left">
                <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

                <ul>
                <% event.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

          <div class="form-group">
            <%= form.label :start_date %>
            <%= form.datetime_select :start_date, class: "form-group" %>
          </div>

          <div class="form-group">
            <%= form.label :duration %>
            <%= form.number_field :duration,in: 0..10080, step: 5,  class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title , class: "form-group"%>
          </div>

          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, class: "form-group" %>
          </div>

          <div class="form-group">
            <%= form.label :price %>
            <%= form.number_field :price ,in: 0..1008, class: "form-group"%>
          </div>

          <div class="form-group">
            <%= form.label :location %>
            <%= form.text_field :location , class: "form-group"%>
          </div>

          <div class="actions mt-5">
            <%= form.submit "Create", class: "btn btn-lg btn-primary btn-block"%>
          </div>
        <% end %>

    </div>
  </div>
</div>
