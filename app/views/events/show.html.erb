

<!DOCTYPE html>
<html>
<div class="jumbotron jumbotron-fluid" style="background-color:#cae3ed">
  <div class="container">
    <p id="notice"><%= notice %></p>
    <h1 class="display-5 text-center" style="color:#37444a" > <strong>Event title: </strong><%= @event.title %></h1><br>
    <p class="text-center">
  
  <strong>Duration: </strong><%= @event.duration %> minutes<br><br>

  <strong>Price: </strong><%= @event.price %> €<br><br>

  <strong>Location: </strong><%= @event.location %><br><br>

  <strong>Créé par: </strong><%= "#{@event.admin.first_name} #{@event.admin.last_name}" %><br><br>

   <strong>Start date: </strong><%= @event.start_date %><br><br>

   <strong>Nombre de participants: </strong><%= @event.attendances.count %> participant(s)<br><br>

  <strong>Description: </strong><%= @event.description %><br><br><br>
  </p>
   <div class="container text-center">
    <%if user_signed_in?%>
    <%unless @admin || @already_attend %>

        <div>
          <%= form_tag event_attendances_path(@event) do %>
            <article>
              <% if flash[:error].present? %>
                <div id="error_explanation">
                  <p><%= flash[:error] %></p>
                </div>
              <% end %>
            </article>

            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-description="<%=@event.title%> registration"
                    data-amount="<%=@event.price*100%>"
                    data-currency="eur"
                    data-locale="auto"></script>

          </div>
        <%end%>
        
      <%end%>
      <%end%>
  </div>

  <br><br><p class="text-center">
  <a href=><button class='btn btn-outline-primary' ><%= link_to 'Edit', edit_event_path(@event) %></button></a>
  <a href=><button class='btn btn-success' ><%= link_to 'Back', events_path %></button></a>
    </p>
    </div>
    <br/><br/><br/>
</div>

  
</html>
